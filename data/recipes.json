{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "me.ftmc.datapack:recipes",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "blasting",
            "campfire_cooking",
            "smelting",
            "smoking"
          ]
        },
        "ingredient": {
          "oneOf": [
            {
              "$ref": "#/def/selector"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/def/selector"
              }
            }
          ]
        },
        "result": {
          "$ref": "#/def/directSelector"
        },
        "experience": {
          "type": "number"
        },
        "cookingtime": {
          "type": "integer"
        }
      },
      "required": [
        "type",
        "ingredient",
        "result",
        "experience"
      ]
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "crafting_shaped"
          ]
        },
        "pattern": {
          "type": "array",
          "minItems": 1,
          "maxItems": 3,
          "items": {
            "type": "string",
            "pattern": "^.{1,3}$"
          }
        },
        "key": {
          "type": "object",
          "minItems": 1,
          "maxItems": 9,
          "propertyNames": {
            "type": "string",
            "pattern": "^.$"
          },
          "additionalProperties": {
            "oneOf": [
              {
                "$ref": "#/def/selector"
              },
              {
                "type": "array",
                "items": {
                  "$ref": "#/def/selector"
                }
              }
            ]
          }
        },
        "result": {
          "type": "object",
          "properties": {
            "count": {
              "type": "integer",
              "minimum": 1,
              "maximum": 64,
              "default": 1
            },
            "item": {
              "$ref": "#/def/directSelector"
            }
          },
          "additionalProperties": false,
          "required": [
            "item"
          ]
        }
      },
      "required": [
        "type",
        "pattern",
        "key",
        "result"
      ]
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "crafting_shapeless"
          ]
        },
        "ingredients": {
          "type": "array",
          "minItems": 1,
          "maxItems": 9,
          "items": {
            "oneOf": [
              {
                "$ref": "#/def/directSelector"
              },
              {
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "#/def/directSelector"
                }
              }
            ]
          }
        },
        "result": {
          "type": "object",
          "properties": {
            "count": {
              "type": "integer",
              "minimum": 1,
              "maximum": 64,
              "default": 1
            },
            "item": {
              "$ref": "#/def/directSelector"
            }
          },
          "required": [
            "item"
          ]
        }
      },
      "required": [
        "type",
        "ingredients",
        "result"
      ]
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "smithing"
          ]
        },
        "base": {
          "$ref": "#/def/selector"
        },
        "addition": {
          "$ref": "#/def/selector"
        },
        "result": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "base",
        "addition",
        "result"
      ]
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "stonecutting"
          ]
        },
        "ingredient": {
          "oneOf": [
            {
              "$ref": "#/def/selector"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/def/selector"
              }
            }
          ]
        },
        "result": {
          "$ref": "#/def/directSelector"
        },
        "count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 64,
          "default": 1
        }
      },
      "required": [
        "type",
        "ingredient",
        "result"
      ]
    }
  ],
  "def": {
    "selector": {
      "oneOf": [
        {
          "properties": {
            "item": {
              "$ref": "#/def/directSelector"
            }
          },
          "additionalProperties": false
        },
        {
          "properties": {
            "tag": {
              "type": "string",
              "pattern": "^([a-z0-9\\-_]+:)?([a-z0-9\\-_]+/)*[a-z0-9\\-_]+$"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "directSelector": {
      "$ref": "../general/items.json"
    }
  }
}